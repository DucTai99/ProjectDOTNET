@using Model.DAO;
@using Model.EF;
@using System.Globalization;
@{
    ViewBag.Title = "Account";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="~/Assets/Admin/js/AjaxController.js"></script>
}

@{
    List<user> listUser = ViewBag.listUser;
}

<main>
    <div class="container-fluid">
        <h1 class="mt-4">Quản lý tài khoản</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Quản lý tài khoản</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-table mr-1"></i>DataTable Example</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTableUser" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Email</th>
                                <th>Level</th>
                                <th>Active</th>
                                <th>Xóa</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Email</th>
                                <th>Level</th>
                                <th>Active</th>
                                <th>Xóa</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (user user in listUser)
                            {
                                <tr>
                                    <td>@user.idUser</td>
                                    <td><a href="#userDetail" class="user-email" name="userDetail" data-id="@user.email">@user.email</a></td>
                                    @{
                                        var level = "";
                                        if (user.level == 1)
                                        {
                                            level = "Khách hàng";
                                        }
                                        if (user.level == 2)
                                        {
                                            level = "Admin";
                                        }

                                    }
                                    <td>@level</td>
                                    @if (user.active == 1)
                                    {
                                        <td><i class="fas fa-user-check" style="font-size:20px;color:#007bff"></i></td>
                                    }
                                    @if (user.active != 1)
                                    {
                                        <td><i class="fas fa-user-times" style="font-size:20px;color:red"></i></td>
                                    }
                                    <td>
                                        <a class="delete-user" style="text-decoration:none"  href="#" data-email="@user.email">
                                            <i  class="fas fa-user-slash" style="font-size:20px;color:red"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <br />
        <hr />

        <div id="userDetail" style="padding-top: 15px">
        </div>
    </div>
</main>


