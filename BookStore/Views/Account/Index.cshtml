@using Model.EF;
@using System.Globalization;
@using Model.DAO;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<bill> listBill = ViewBag.listBill;
}
@section jsFooter{
    <script src="~/Assets/Client/js/controller/shopController.js"></script>
}
<!-- Breadcrumbs Area Start -->
