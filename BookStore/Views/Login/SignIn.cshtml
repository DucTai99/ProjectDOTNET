<!-- Loging Area Start -->
<div class="login-account section-padding">
    <div class="container">
        <div class="row"
             style="display: flex; align-items: center; justify-content: center;">
            <div class="col-md-6 col-sm-6">
                @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
                {
                    <div class="create-account-form">


                        @Html.AntiForgeryToken()
                        <h2 class="heading-title">
                            Bạn đã có tài khoản ?
                        </h2>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <p class="form-row">
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "", @style = "outline: none", @type = "email", @placeholder = "Địa chỉ email" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </p>

                        <p class="form-row">
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "", @style = "outline: none", @type = "password", @placeholder = "Mật khẩu" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </p>

                        @if (@ViewBag.Message != null)
                        {
                            <div style="color: red">
                                @ViewBag.Message
                            </div>
                        }

                        <p class="lost-password form-group">
                            <a href="#" id="btn-forgot" rel="nofollow">Quên mật khẩu ?</a>
                        </p>

                        <div class="submit">
                            <button name="submitcreate"
                                    id="submitcreate"
                                    type="submit"
                                    class="btn-default">
                                <span>
                                    <i class="fa fa-user left"></i>
                                    Đăng nhập
                                </span>
                            </button>
                        </div>

                    </div>
                }

